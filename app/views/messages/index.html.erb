<div class="row">
<p id="notice"><%= notice %></p>
</div>
<div class="row">
<h1>New Message</h1>
<%= render 'form' %>
</div>
<div class="row">
<h1>Listing Messages</h1>
</div>
<% @messages.each do |message| %>
    <div class="row">
        <hr>
        <dl>
            <dt>タイトル</dt><dd><%= message.title %></dd>
            <dt>更新日時</dt><dd><%= message.updated_at%></dd>
            <dt>本文</dt><dd><%= message.body %></dd>
            <dt>投稿者</dt><dd><%= message.user.name %></dd>
        </dl>
    <% if @current_user.id == message.user.id %>
        <%= link_to 'Edit', edit_message_path(message), class: 'btn btn-warning' %>
        <%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
    <%end%>
    </div>
<% end %>
